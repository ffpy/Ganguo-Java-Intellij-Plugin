<idea-plugin>
    <id>com.ganguo.plugin</id>
    <name>Ganguo Java</name>
    <vendor email="support@yourcompany.com" url="http://www.yourcompany.com">Ganguo</vendor>

    <description><![CDATA[
    Enter short description for your plugin here.<br>
    <em>most HTML tags may be used</em>
    ]]></description>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <!-- uncomment to enable plugin in all products
    <depends>com.intellij.modules.lang</depends>
    -->

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
    </extensions>

    <actions>
        <group id="Ganguo.Menu"
               text="Ganguo"
               description="Ganguo Menu">

            <add-to-group group-id="MainMenu" anchor="last"/>

            <action id="com.ganguo.plugin.action.AddMsgAction"
                    class="com.ganguo.plugin.action.AddMsgAction"
                    text="AddMsg"
                    description="Add msg to exception_msg.properties and ExceptionMsg.java"/>

            <action id="com.ganguo.plugin.action.NewService2Action"
                    class="com.ganguo.plugin.action.NewService2Action"
                    text="New Service"
                    description="New service and impl"/>

            <action id="com.ganguo.plugin.action.NewRepositoryAction"
                    class="com.ganguo.plugin.action.NewRepositoryAction"
                    text="New Repository"
                    description="New repository and impl"/>

<!--            <action id="com.ganguo.plugin.action.TestAction"-->
<!--                    class="com.ganguo.plugin.action.TestAction"-->
<!--                    text="Test"-->
<!--                    description="Test"/>-->
        </group>
        <group id="Ganguo.New"
               text="Ganguo"
               description="Ganguo New" popup="true">

            <add-to-group group-id="NewGroup" anchor="last"/>

            <action id="com.ganguo.plugin.action.NewServiceAction"
                    class="com.ganguo.plugin.action.NewServiceAction"
                    text="New service and impl"
                    description="New Service and ServiceImpl"/>
        </group>
    </actions>
</idea-plugin>