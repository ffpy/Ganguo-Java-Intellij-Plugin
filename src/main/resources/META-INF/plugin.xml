<idea-plugin>
    <id>com.ganguo.plugin</id>
    <name>Ganguo Java</name>
    <vendor email="support@yourcompany.com" url="http://www.yourcompany.com">Ganguo</vendor>

    <description><![CDATA[ Description will be added by gradle build ]]></description>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <!-- uncomment to enable plugin in all products
    <depends>com.intellij.modules.lang</depends>
    -->
    <depends>com.intellij.modules.java</depends>

    <extensions defaultExtensionNs="com.intellij">
        <projectConfigurable instance="com.ganguo.java.plugin.configurable.ProjectConfigurable"/>

        <projectService serviceInterface="com.ganguo.java.plugin.service.ProjectSettingService"
                        serviceImplementation="com.ganguo.java.plugin.service.ProjectSettingServiceImpl"/>
    </extensions>

    <application-components>
        <component>
            <interface-class>com.ganguo.java.plugin.component.AppComponent</interface-class>
            <implementation-class>com.ganguo.java.plugin.component.AppComponentImpl</implementation-class>
        </component>
    </application-components>

    <actions>
        <group id="Ganguo.Menu"
               text="Ganguo"
               description="Ganguo">

            <add-to-group group-id="MainMenu" anchor="last"/>

            <action id="com.ganguo.java.plugin.action.menu.AddMsgAction"
                    class="com.ganguo.java.plugin.action.menu.AddMsgAction"
                    text="添加Msg"/>

            <action id="com.ganguo.java.plugin.action.menu.NewServiceAction"
                    class="com.ganguo.java.plugin.action.menu.NewServiceAction"
                    text="生成Service"/>

            <action id="com.ganguo.java.plugin.action.menu.NewRepositoryAction"
                    class="com.ganguo.java.plugin.action.menu.NewRepositoryAction"
                    text="生成Repository"/>

            <action id="com.ganguo.java.plugin.action.menu.NewValidationAction"
                    class="com.ganguo.java.plugin.action.menu.NewValidationAction"
                    text="生成校验注解"/>

            <action id="com.ganguo.java.plugin.action.menu.CaseFormatAction"
                    class="com.ganguo.java.plugin.action.menu.CaseFormatAction"
                    text="驼峰-下划线互转">
                <keyboard-shortcut keymap="$default" first-keystroke="shift meta MINUS"/>
            </action>

            <action id="com.ganguo.java.plugin.action.menu.WrapBackquoteAction"
                    class="com.ganguo.java.plugin.action.menu.WrapBackquoteAction"
                    text="SQL字段用反引号包裹">
                <keyboard-shortcut keymap="$default" first-keystroke="shift meta BACK_QUOTE"/>
            </action>

            <action id="com.ganguo.java.plugin.action.menu.ApiModelAutoPosition"
                    class="com.ganguo.java.plugin.action.menu.ApiModelAutoPosition"
                    text="ApiMode自动编号">

            </action>

            <action id="com.ganguo.java.plugin.action.menu.GenerateSetterCaller"
                    class="com.ganguo.java.plugin.action.menu.GenerateSetterCaller"
                    text="生成Setter调用">

            </action>

        </group>

        <group id="Ganguo.Generate"
               text="Ganguo"
               description="Ganguo"
               popup="true">

            <add-to-group group-id="GenerateGroup" anchor="last"/>

            <!-- Controller -->
            <action id="com.ganguo.java.plugin.action.generate.GenerateApiTestClassAction"
                    class="com.ganguo.java.plugin.action.generate.GenerateApiTestClassAction"
                    text="生成测试类"/>

            <action id="com.ganguo.java.plugin.action.generate.GotoApiTestClassAction"
                    class="com.ganguo.java.plugin.action.generate.GotoApiTestClassAction"
                    text="跳转到测试类"/>
            
            <action id="com.ganguo.java.plugin.action.generate.ModifyApiUrlAction"
                    class="com.ganguo.java.plugin.action.generate.ModifyApiUrlAction"
                    text="修改URL"/>

            <action id="com.ganguo.java.plugin.action.generate.ModifyApiNameAction"
                    class="com.ganguo.java.plugin.action.generate.ModifyApiNameAction"
                    text="修改方法名称"/>

            <action id="com.ganguo.java.plugin.action.generate.GotoApiMethodAction"
                    class="com.ganguo.java.plugin.action.generate.GotoApiMethodAction"
                    text="跳转到接口方法"/>

            <!-- Repository -->
            <action id="com.ganguo.java.plugin.action.generate.GenerateRepositoryMethodAction"
                    class="com.ganguo.java.plugin.action.generate.GenerateRepositoryMethodAction"
                    text="实现此方法"/>

            <!-- Mapper -->
            <action id="com.ganguo.java.plugin.action.generate.AddMappingIgnoreAction"
                    class="com.ganguo.java.plugin.action.generate.AddMappingIgnoreAction"
                    text="添加ignore"/>

        </group>

    </actions>

    <change-notes><![CDATA[ Change notes will be filled by gradle build ]]></change-notes>

</idea-plugin>